@model IEnumerable<WebsiteBookingHotel.Data.ImageCollection>
@{
    ViewData["Title"] = "Thư viện ảnh ";
}

@section Css {
    <style>
    body {
            background: url(@(ViewBag.Banner != null ? ViewBag.Banner.Link : "/img/slideshow_1.jpg")) no-repeat;
            background-size: 100% auto;

        }
    </style>
    <style>
        header {
            background: #fff;
        }

        .page-index-header {
            margin: 0px;
            padding: 25px 0px;
            text-align: center;
            background: rgba(245,245,245,0.8);
        }

            .page-index-header > h2 {
                font-size: 30px;
                color: #ec6841;
                letter-spacing: 0px;
                margin-top: 0;
                text-transform: uppercase;
                font-weight: 500;
                font-family: 'Roboto', sans-serif;
                text-shadow: 0px 0px 3px #b59472;
            }

        .background-blur {
            -webkit-filter: blur(5px);
            -moz-filter: blur(5px);
            -o-filter: blur(5px);
            -ms-filter: blur(5px);
            filter: blur(5px);
        }

        h3 {
            font-weight: 500;
            line-height: 25px;
            color: #ec6841;
            font-family: 'Roboto', sans-serif;
        }

        .wblog-date-header, .sub-hyperlink-header {
            font-weight: 500;
            line-height: 25px;
            color: #ec6841;
            font-family: 'Roboto', sans-serif;
            padding: 20px 0px;
        }

        .wblog-image {
            padding: 5px;
            border: 1px solid #4ca2f5;
            border-radius: 3px;
        }

        .wblog-date-credit {
            padding: 10px 0px;
            border-top: 1px dashed #9a7d00;
            margin-top: 10px;
        }

        .wblog-date-tag {
            padding: 3px 5px;
            background: #584242;
            color: #fff;
            border-radius: 2px;
        }

        .sub-hyperlink-content {
            padding-left: 15px;
        }

            .sub-hyperlink-content i {
                color: #45832c;
            }

            .sub-hyperlink-content a {
                color: #777;
            }

        iframe {
            width: 100%;
            height: 400px;
            border: 5px solid #fff;
            border-radius: 2px;
            margin-top: 50px;
        }
    </style>

}

<div class="container-fluid p-0">
    <div class="background-blur"></div>
    <div class="mx-auto page-index-header">
        <h2>
            Thư viện ảnh
        </h2>
        <span>
            @ViewData["Welcome"]
        </span>
    </div>
</div>
<div class="container-fluid mb-5 bg-white">
    <div class="container pt-5 pb-5">
        <div class="row">
            @foreach (var item in Model)
            {
            <div class=" col-md-4 p-1">
                <div class="img-thumbnail">
                    <img class="img-fluid" src="@item.Link" alt="@item.Title" />
                </div>
            </div>
                
            }
        </div>
        
    </div>
</div>