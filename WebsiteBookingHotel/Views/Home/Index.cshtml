@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid p-0 slide-show">
    <img src="@(ViewBag.Banner != null ? ViewBag.Banner.Link : "/img/slideshow_1.jpg")" class="img-fluid" style="width: 100%;" alt="Responsive image">
    <p class="mx-auto title-welcome">
        @ViewData["Welcome"]
    </p>
</div>
<div class="container-fluid p-0 fast-booking-form">
    <div class="container p-5">
        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="fastBookingEmail" placeholder="Email" style="border-right: none;">
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="far fa-envelope"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <input type="text" class="form-control" id="fastBookingFromDate" placeholder="Ngày nhận phòng" style="border-right: none;" data-toggle="datepicker">
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <input type="text" class="form-control" id="fastBookingToDate" placeholder="Ngày trả phòng" style="border-right: none;" data-toggle="datepicker">
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <select class="custom-select mr-sm-2" id="fastBookingTypeRoom">
                    <option selected>Loại phòng</option>
                    <option value="1">Phòng đơn</option>
                    <option value="2">Phòng đôi</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="custom-select mr-sm-1" id="fastBookingUnit">
                    <option selected>Số người</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="col-md-1">
                <input type="button" class="btn btn-booking text-white" value="Đặt phòng" onclick="bookingRoom()" />
            </div>
        </div>
    </div>
</div>

<div class="container-fluid p-0">
    <div class="container">
        <div class="page-index-header pt-5">
            <h2>
                PHÒNG PHỔ BIẾN
            </h2>
            <span>
                " Hãy tìm phòng bạn thích, hãy cảm nhận như nhà của bạn "
            </span>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in ViewBag.Room)
            {
                <div class="col-md-4 mb-5">
                    <div class="tab-index-booking i2">
                        <div class="lable-booking-status">
                            @item.Note
                        </div>
                        <div class="img-preview">
                            <img src="@item.ImageRoom" class="img-fluid" />
                        </div>
                        <a href="/Danh-Sach-Phong/@item.Alias" class="title-booking">
                            @item.Title
                        </a>
                        <div class="description-booking">
                            @item.Descriptions
                        </div>
                        <div class="option-booking">
                            <div class="row m-0">
                                @{
                                    bool skip = true;
                                    List<string> Addtionals = new List<string>();
                                    if (!String.IsNullOrEmpty(item.Addtional))
                                    {
                                        Addtionals = ((string)item.Addtional).Split(',').ToList();
                                    }
                                }
                                <div class="col-md-6">
                                    @foreach (string s in Addtionals)
                                    {
                                        if (skip)
                                        {
                                            skip = false;
                                            <p>
                                                <i class="fas fa-check-square"></i> @s
                                            </p>
                                        }
                                        else
                                        {
                                            skip = true;
                                        }
                                    }
                                </div>
                                <div class="col-md-6">
                                    @{
                                        skip = false;
                                    }
                                    @foreach (string s in Addtionals)
                                    {
                                        if (skip)
                                        {
                                            skip = false;
                                            <p>
                                                <i class="fas fa-check-square"></i> @s
                                            </p>
                                        }
                                        else
                                        {
                                            skip = true;
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <hr class="h20" />
                        <div class="footer-booking">
                            <div class="price-booking float-left">@item.Pirce.ToString("N0") <sup>đ</sup>/<sub>đêm</sub></div>
                            <div class="float-right">
                                <input type="button" class="btn btn-info" value="Xem chi tiết" />
                                <input type="button" class="btn btn-success" value="Đặt phòng" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="page-index-header pt-5">
        <h2>
            TUYỂN TẬP HÌNH ẢNH
        </h2>
        <span>
            " Hãy tìm phòng bạn thích, hãy cảm nhận như nhà của bạn "
        </span>
    </div>
    <div class="row">
        @foreach (var item in ViewBag.thumbnail)
        {
            <div class="col-md-3">
                <img class="img-thumbnail" src="@item.Link" alt="@item.Title" />
            </div>
        }
    </div>
</div>

<hr />


<div class="container">
    <div class="row">
        <div class="col-md-3 page-index-header pb-5">
            <p class="icon-bigger mx-auto mb-5">
                <i class="fas fa-file-signature"></i>
            </p>
            <h3>
                Thực đơn
            </h3>
            <span>
                Đồ uống và thực đơn tại Sunshine luôn đa dạng, phù hợp với mọi lứa tuổi, làm hài lòng những vị khách khó tính nhất.
            </span>
        </div>
        <div class="col-md-3 page-index-header pb-5">
            <p class="icon-bigger mx-auto mb-5">
                <i class="far fa-credit-card"></i>
            </p>
            <h3>
                Tận hưởng trước - Thanh toán sau
            </h3>
            <span>
                Bạn không cần phải đặt cọc, hãy ở và tận hưởng không khí tại Sunshine rồi thanh toán sau.
            </span>
        </div>
        <div class="col-md-3 page-index-header pb-5">
            <p class="icon-bigger mx-auto mb-5">
                <i class="fas fa-door-open"></i>
            </p>
            <h3>
                Nhà hàng luôn phục vụ 24 giờ
            </h3>
            <span>
                Nhà hàng tại Sunshine luôn mở cửa phục vụ quý khách 24 giờ/ngày, với các món ăn Việt - Âu - Á, với các đầu bếp có tay nghề cao.
            </span>
        </div>
        <div class="col-md-3 page-index-header pb-5">
            <p class="icon-bigger mx-auto mb-5">
                <i class="fas fa-spa"></i>
            </p>
            <h3>
                Dịch vụ Spa
            </h3>
            <span>
                Bạn mệt mỏi sau 1 ngày tham quan du lịch, bạn có thể sử dụng các dịch vụ massage, thư giãn giúp bạn thoải mái hơn.
            </span>
        </div>
    </div>
</div>

<div class="modal" id="modal-booking" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p class="text-center">Đặt phòng thành công.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        function bookingRoom() {
            var data = {};
            data.email = $("#fastBookingEmail").val();
            data.fromDate = $("#fastBookingFromDate").val();
            data.toDate = $("#fastBookingToDate").val();
            data.typeRoom = $("#fastBookingTypeRoom > option:selected").text();
            data.unitCustomer = $("#fastBookingUnit > option:selected").val();

            $.post("/Services/BookingRoom", data, function (d) {
                if (d) {
                    $("#modal-booking").modal();
                }
            });
        }

        

        $(document).ready(function () {
            $('[data-toggle="datepicker"]').datepicker();
        })
    </script>

}